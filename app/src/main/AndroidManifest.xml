<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.exciter.androidbasic">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidBasic">
        <activity android:name=".http.volley.VolleyActivity"></activity>
        <activity android:name=".http.HttpActivity" />
        <activity android:name=".widget.coordinatorlayout.CoordinatorLayoutActivity" />
        <activity android:name=".widget.navigationview.NavigationViewActivity" />
        <activity android:name=".widget.tablayout.TabLayoutActivity" />
        <activity android:name=".widget.floatingactionbutton.FloatingActionButtonActivity" />
        <activity android:name=".widget.textinputlayout.TextInputLayoutActivity" />
        <activity android:name=".widget.snackbar.SnackBarActivity" />
        <activity android:name=".widget.notification.NotificationActivity" />
        <activity android:name=".widget.cardview.CardViewActivity" />
        <activity android:name=".widget.recyclerview.RecyclerViewActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>